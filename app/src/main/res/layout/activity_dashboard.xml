<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textSize="24sp"
        android:padding="16dp" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:layout_marginTop="10dp"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/searchOpportunitiesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_job"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/myApplicationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_applications"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/viewOpportunities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_opportunities"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout"
        android:backgroundTint="#2563EB"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/testNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Notification"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/tokenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading token..."
        android:textSize="12sp"
        android:padding="8dp"
        android:textIsSelectable="true"
        android:selectAllOnFocus="true"
        android:background="@android:color/white"
        android:textColor="@android:color/black" />

</LinearLayout>