<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.SAJConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Core Colors -->
        <item name="colorPrimary">#2563EB</item> <!-- Blue -->
        <item name="colorPrimaryVariant">#1E40AF</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#16A34A</item> <!-- Green -->
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background and text -->
        <item name="android:colorBackground">#F3F4F6</item> <!-- Soft gray -->
        <item name="android:textColor">#111827</item> <!-- Dark gray text -->
        <item name="android:windowBackground">#F3F4F6</item>
        <item name="android:navigationBarColor">#2563EB</item>
        <item name="android:statusBarColor">#1E40AF</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Control colors -->
        <item name="android:editTextColor">#111827</item>
        <item name="android:textColorHint">#6B7280</item>
        <item name="android:textColorPrimary">#111827</item>
        <item name="android:textColorSecondary">#374151</item>

        <!-- SearchView and Spinner tweaks -->
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="spinnerStyle">@style/CustomSpinner</item>

        <!-- Fonts -->
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <!-- Custom SearchView Style -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:queryBackground">@color/white</item>
        <item name="android:submitBackground">@color/primary_blue</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Custom Spinner Style -->
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">#FFFFFF</item>
        <item name="android:textColor">#111827</item>
    </style>

</resources>
